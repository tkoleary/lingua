{
	"locals": {
		"url": "http://localhost:8080",
		"name": "Lingua",
		"owner": "Kevin Oleary",
		"description": "Internationalize your type"
	},
	"plugins": [
		"./plugins/paginator.coffee",
		"wintersmith-tag",
		"wintersmith-livereload"
	],
	"require": {
		"moment": "moment",
		"_": "underscore",
		"typogr": "typogr"
	},
	"pug": {
		"pretty": true
	},
	"markdown": {
		"smartLists": true,
		"smartypants": true
	},
	"paginator": {
		"articles": "articles",
		"perPage": 12
	},
	"ignore": [
		"**/*.conf",
		"**/.DS_Store"
	],
	"livereload": {
		"port": 35729,
		"liveCSS": true
	}
}
