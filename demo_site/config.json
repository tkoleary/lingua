{
  "locals": {
    "url": "http://localhost:8080",
    "name": "Lingua",
    "owner": "Kevin Oleary",
    "description": "Internationalize your type"
  },
  "plugins": [
    "./plugins/paginator.coffee",
		"wintersmith-livereload"
  ],
  "require": {
    "moment": "moment",
    "_": "underscore",
    "typogr": "typogr"
  },
  "pug": {
    "pretty": true
  },
  "markdown": {
    "smartLists": true,
    "smartypants": true
  },
  "paginator": {
    "perPage": 3
  },
	"livereload": {
    "port": 35729,
		"liveCSS": true
  }
}
